# Application bindings
source = ~/.config/hypr/custom-vars.conf

bindd = SUPER, return, Terminal, exec, $terminal # --working-directory $(omarchy-cmd-terminal-cwd)
bindd = SUPER SHIFT CTRL, return, Floating Terminal, exec, [float] $terminal
bindd = SUPER, E, File manager, exec, uwsm app -- nautilus --new-window
bindd = SUPER, B, Browser, exec, $browser
bindd = SUPER SHIFT, B, Browser (private), exec, $browser --private
bindd = SUPER, M, Music, exec, [workspace 5] omarchy-launch-webapp "https://play.qobuz.com/discover"
# bindd = SUPER, M, Music, exec, omarchy-launch-or-focus spotify "uwsm app -- spotify -enable-features=UseOzonePlatform --ozone-platform=wayland --disable-gpu"
bindd = SUPER, N, Editor, exec, omarchy-launch-editor
bindd = SUPER, T, Activity, exec, [float] $terminal -e btop
bindd = SUPER, D, Docker, exec, $terminal -e lazydocker
bindd = SUPER, O, Obsidian, exec, omarchy-launch-or-focus obsidian "uwsm app -- obsidian -disable-gpu --enable-wayland-ime"

bindd = SUPER, Y, YouTube, exec, omarchy-launch-webapp "https://youtube.com/"
bindd = SUPER, X, X, exec, omarchy-launch-webapp "https://x.com/"
bindd = SUPER, L, Lock screen, exec, omarchy-lock-screen
bindd = SUPER ALT, V, Clipboard history, exec, walker -m clipboard

# Overwrite existing bindings, like putting Omarchy Menu on Super + Space
unbind = SUPER, P
bindd = SUPER ALT, P, Pseudo window, pseudo,
# bindd = SUPER, SPACE, Omarchy menu, exec, omarchy-menu

bindd = SUPER SHIFT, P, Passwords, exec, [float] uwsm app -- proton-pass -enable-features=UseOzonePlatform --ozone-platform=wayland --disable-gpu

# Extra workspace bindings
bindd = SUPER, S, Toggle special workspace, togglespecialworkspace
bindd = SUPER SHIFT, S, Move to special workspace, movetoworkspace, special
bindd = SUPER, P, Toggle Perplexity workspace, togglespecialworkspace, perplexity

# Monitors
bindd = , F3, Monitors configuration, exec, [float] $terminal -e bash -c 'export HYPRLAND_CONFIG=~/.config/hypr-local/monitors.conf; hyprmon'

bindd = SUPER SHIFT CTRL, P, Perplexity, exec, $webapp "https://perplexity.ai"

source = ~/.config/hypr-local/bindings.conf
